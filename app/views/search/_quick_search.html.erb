<% form_tag({:controller => 'search', :action => 'index', :id => @project}, :method => :get, :class => 'navbar-search pull-right') do %>
  <%= hidden_field_tag(controller.default_search_scope, 1, :id => nil) if controller.default_search_scope %>
  <%= text_field_tag 'q', search_term, :size => 20, :class => 'search-query', :placeholder => l(:search_input_placeholder), :accesskey => accesskey(:quick_search) %>
<% end %>
